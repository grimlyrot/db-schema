model CloudflareDomain {
  id         String   @id @default(cuid())
  name       String
  apiKey     String   @map("api_key")
  email      String
  domainId   String   @unique @map("domain_id")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  account_id String
  domain     Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
}

model CloudflareAccount {
  id          String   @id @default(cuid())
  name        String?
  accountId   String   @map("account_id")
  apiToken    String   @map("api_token")
  email       String?
  status      String?  @default("ACTIVE")
  zoneCount   Int      @default(0) @map("zone_count")
  workerCount Int      @default(0) @map("worker_count")
  // Cloudflare for SaaS (Custom Hostnames) config.
  // Allows attaching user-owned domains to our Worker without deploying code into user accounts.
  saasZoneId     String? @map("saas_zone_id")
  saasZoneName   String? @map("saas_zone_name")
  saasTargetHost String? @map("saas_target_host")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pwas        Pwa[]
  customHostnames CloudflareCustomHostname[]
}

model NamecheapDomain {
  id               String   @id @default(cuid())
  name             String
  apiKey           String   @map("api_key")
  username         String
  email            String
  contactFirstName String   @map("contact_first_name")
  contactLastName  String   @map("contact_last_name")
  contactPhone     String   @map("contact_phone")
  domainId         String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  contactAddress   String   @map("contact_address")
  contactCity      String   @map("contact_city")
  contactCountry   String   @map("contact_country")
  contactPostal    String   @map("contact_postal")
  domain           Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
}

model Domain {
  id         String            @id @default(cuid())
  name       String
  expiresAt  DateTime          @map("expires_at")
  pwaId      String?           @map("pwa_id")
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  pwa        Pwa?              @relation(fields: [pwaId], references: [id], onDelete: Cascade)
  cloudflare CloudflareDomain?
  customHostname CloudflareCustomHostname?
  namecheap  NamecheapDomain?
}

model CloudflareCustomHostname {
  id         String   @id @default(cuid())
  hostname   String
  cloudflareId String @unique @map("cloudflare_id")
  status     String?
  ssl        Json?
  ownershipVerification     Json? @map("ownership_verification")
  ownershipVerificationHttp Json? @map("ownership_verification_http")
  verificationErrors        Json? @map("verification_errors")

  domainId   String   @unique @map("domain_id")
  domain     Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  cloudflareAccountId String? @map("cloudflare_account_id")
  cloudflareAccount   CloudflareAccount? @relation(fields: [cloudflareAccountId], references: [id], onDelete: SetNull)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([hostname])
}
